#include <stdio.h>

int main()
{
	
	int num;

	printf("수를 입력하세요.\n");
	scanf_s("%d", &num);

	if (!(num % 2)) // 입력한 num 값을 2로 나누기.
	{
		printf("짝수 입니다.\n"); //2로 나누어진다.
	}
	else
	{
		printf("홀수 입니다.\n"); //2로 나누어지지않는다.
	}

	if ((num % 2) == 0)
	{
		printf("짝수 입니다.\n"); //2로 나누어서 나머지가 0이다.
	}
	else
	{
		printf("홀수 입니다.\n"); //나머지 0 아님
	}

	if ((num % 2) != 0)
	{
		printf("홀수 입니다.\n");
	}
	else
	{
		printf("짝수 입니다.\n"); 
	}
}